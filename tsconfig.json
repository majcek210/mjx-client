{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2022"],
    "types": ["node"],

    "outDir": "dist",
    "declaration": true,
    "removeComments": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "esModuleInterop": true,
    "skipLibCheck": false
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
